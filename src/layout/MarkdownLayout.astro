---
import Back from '@icons/Back.astro'
import "@/global/styles/defaults.css";
import "@/global/styles/custom.css";
import "@fontsource/onest";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title?: string | number;
  description?: string;
  ogImage?: string;
  frontmatter: any;
}

const {
  title = "V Pacto Local polo Emprego 2024-2027",
  description = "O V Pacto Local polo Emprego 2024-2027 é un compromiso activo do departamento de emprego do concello de santiago de compostela, por facer do emprego un elemento para a efectiva integración e inclusión social da cidadanía.",
  ogImage,
} = Astro.props;

import Footer from "@components/sections/Footer.astro";
import Header from "@components/sections/HeaderBlog.astro";

const { frontmatter } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:title" content={`${title}`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImage ?? "logo.svg"} />
    <link rel="shortcut icon" href="/logo.svg" type="image/x-icon" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"
    ></script>
    <ViewTransitions />
  </head>
  <body class="text-text bg-white">
    <!-- Background gradient -->
    <div
      class="absolute inset-0 -z-10 h-full w-full bg-white bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:14px_24px]"
    >
      <div
        class="absolute left-0 right-0 top-0 -z-10 m-auto h-[310px] w-[310px] rounded-full bg-fuchsia-400 opacity-20 blur-[100px]"
      >
      </div>
    </div><!-- end Background gradient -->

    <a href="javascript:history.back()" class="fixed top-2/4 right-5">
      <Back class="w-9 text-primary/90 bg-black/25 rounded" />
  </a>

    <Header />

    <div class="max-w-[1040px] p-10 mx-auto">
      <div class="mark-down">
        <aside
          slot="aside"
          class="flex justify-between items-center gap-2 mb-4 text-sm"
        >
          <strong class="text-3xl">
            {title}
          </strong>
        </aside>
        <main>
          <slot />
        </main>
      </div>
      <Footer />
    </div>
  </body>
</html>
  
<style is:global>
  .mark-down {
    /* @link https://utopia.fyi/type/calculator?c=320,18,1.2,1000,20,1.25,5,2,&s=0.75|0.5|0.25,1.5|2|3|4|6,s-l&g=s,l,xl,12 */

    --step--2: clamp(0.7813rem, 0.7724rem + 0.0441vi, 0.8rem);
    --step--1: clamp(0.9375rem, 0.9081rem + 0.1471vi, 1rem);
    --step-0: clamp(1.125rem, 1.0662rem + 0.2941vi, 1.25rem);
    --step-1: clamp(1.35rem, 1.25rem + 0.5vi, 1.5625rem);
    --step-2: clamp(1.62rem, 1.4632rem + 0.7838vi, 1.9531rem);
    --step-3: clamp(1.944rem, 1.7099rem + 1.1704vi, 2.4414rem);
    --step-4: clamp(2.3328rem, 1.9945rem + 1.6917vi, 3.0518rem);
    --step-5: clamp(2.7994rem, 2.3216rem + 2.389vi, 3.8147rem);

    font-size: var(--step-0);
    text-transform: initial;
    margin: 0 auto;
    max-width: 60rem;
  }

  .mark-down pre {
    margin: 1em 0;
    background-color: #333;
    font-size: var(--step-0);
  }

  .mark-down pre,
  .mark-down code {
    font-family: Menlo, Monaco, "Courier New", monospace;
  }
  .mark-down pre {
    padding: 0.5rem;
    line-height: 1.25;
    overflow-x: scroll;
  }
  .mark-down blockquote {
    position: relative;
    padding-left: 1rem;
  }

  .mark-down blockquote::before {
    content: "";
    position: absolute;
    left: -1rem;
    top: 0;
    display: block;
    width: 2rem;
    height: 2rem;
    font-size: 6rem;
    background: transparent url(/images/chat-message.svg) no-repeat;
  }

  .mark-down ul,
  .mark-down ol {
    list-style-type: initial;
    padding-left: 0.8em;
  }

  .mark-down a {
    text-decoration: underline;
  }

  .mark-down li,
  .mark-down p {
    margin: 1.3rem 0;
    text-wrap: pretty;
    line-height: 2;
    font-size: inherit;
  }

  .mark-down li {
    margin-left: 1rem;
  }

  .mark-down ol {
    list-style-type: decimal;
  }

  .mark-down p {
    padding-left: 1rem;
  }

  .mark-down h1,
  .mark-down h2,
  .mark-down h3,
  .mark-down h4 {
    margin: 1.414rem 0 0.5rem;
    font-weight: inherit;
    line-height: 1.42;
    text-wrap: balance;
    text-transform: none;
  }

  .mark-down h1 {
    margin-top: 0;
    font-size: var(--step-2);
    text-wrap: balance;
  }

  .mark-down h2 {
    font-size: var(--step-1);
    text-wrap: balance;
  }

  .mark-down h3 {
    font-size: var(--step-1);
    text-wrap: balance;
  }

  .mark-down h4 {
    font-size: var(--step-1);
    text-wrap: balance;
  }

  .mark-down small {
    font-size: 0.707em;
  }

  /* https://github.com/mrmrs/fluidity */

  .mark-down img,
  .mark-down canvas,
  .mark-down iframe,
  .mark-down video,
  .mark-down svg,
  .mark-down select,
  .mark-down textarea {
    max-width: 100%;
  }
</style>

