---
import Concello from '@icons/Concello.astro'

interface Props {
    text?: string,
    href: string,
    id?: string,
    labelledby?: string
}

const { text = 'Ler m√°is', href, id='', labelledby='' } = Astro.props
---

<a  
    href={href} 
    class="inline-flex items-center justify-center p-5 text-base font-medium text-gray-900 rounded-lg bg-primary/10 hover:text-gray-900 hover:bg-primary/25"
    aria-labelledby={labelledby}
    id={id}  
>
    <Concello class="h-8 pr-5" />                                              
    <span class="w-full">{text}</span>
    <svg class="w-4 h-4 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
    </svg>
</a> 
